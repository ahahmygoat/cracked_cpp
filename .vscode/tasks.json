{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "Build (GCC) Windows",
      "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": ["$gcc"],
      "group": { "kind": "build", "isDefault": true },
      "detail": "MinGW GCC (MSYS2) — Windows"
    },
    {
      "type": "shell",
      "label": "Build (GCC) macOS/Linux",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-Wall",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "GCC — macOS / Linux"
    },
    {
      "type": "shell",
      "label": "Build (MSVC)",
      "command": "cl",
      "args": [
        "/EHsc",
        "/Zi",
        "/Fe:${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}"
      ],
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": ["$msCompile"],
      "group": "build",
      "detail": "MSVC — Windows (Developer PowerShell)"
    },
    {
      "type": "shell",
      "label": "Build (Clang)",
      "command": "clang++",
      "args": [
        "-std=c++17",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": { "cwd": "${fileDirname}" },
      "problemMatcher": ["$gcc"],
      "group": "build",
      "detail": "Clang — Windows / macOS / Linux"
    }
  ],
  "version": "2.0.0"
}
